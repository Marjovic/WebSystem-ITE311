# ==============================================================================
# ENHANCED CODEIGNITER SECURITY CONFIGURATION
# ==============================================================================

# Disable directory browsing
Options -Indexes

# Disable server signature
ServerSignature Off

# ==============================================================================
# BLOCK ACCESS TO SENSITIVE FILES AND DIRECTORIES
# ==============================================================================

# Block access to sensitive files by name
<FilesMatch "^(\.env|\.git|\.htaccess|\.htpasswd|web\.config|composer\.json|composer\.lock|package\.json|spark|spark\.php|\.gitignore|README\.md|LICENSE|CHANGELOG\.md)$">
    Require all denied
</FilesMatch>

# Block access to backup and config files by extension
<FilesMatch "\.(bak|backup|swp|tmp|temp|conf|config|ini|log|sql|dist|orig|save)$">
    Require all denied
</FilesMatch>

# Block access to version control and development files
<FilesMatch "^(\.git.*|\.svn.*|\.hg.*|node_modules|vendor)">
    Require all denied
</FilesMatch>

# ==============================================================================
# REWRITE RULES AND ROUTING
# ==============================================================================

<IfModule mod_rewrite.c>
    RewriteEngine On
    Options +FollowSymlinks
    
    # Block directory traversal attempts
    RewriteCond %{THE_REQUEST} \s/+(.*/)*\.\.(/.*)?[\s?] [NC]
    RewriteRule ^ - [F,L]
    
    # Block access to parent directory references in URL
    RewriteCond %{REQUEST_URI} \.\./
    RewriteRule ^(.*)$ - [F,L]
    
    # Block access to sensitive directories
    RewriteRule ^(app|system|writable|tests|vendor|node_modules)/.*$ - [F,L]
    
    # Block access to specific sensitive files by URL path
    RewriteRule ^(env|\.env|spark|spark\.php|composer\.json|composer\.lock|package\.json|\.gitignore|README\.md|LICENSE)$ - [F,L]
    
    # Block access to files starting with dot
    RewriteRule ^\..*$ - [F,L]
    
    # If you installed CodeIgniter in a subfolder, you will need to
    # change the following line to match the subfolder you need.
    # http://httpd.apache.org/docs/current/mod/mod_rewrite.html#rewritebase
    # RewriteBase /
    
    # Redirect Trailing Slashes...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Remove index.php from URLs (only if explicitly in the request)
    RewriteCond %{THE_REQUEST} /index\.php[?\s] [NC]
    RewriteRule ^index\.php(.*)$ /$1 [R=301,L]

    # Rewrite "www.example.com -> example.com" (only for production)
    # RewriteCond %{HTTPS} !=on
    # RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
    # RewriteRule ^ http://%1%{REQUEST_URI} [R=301,L]

    # Block suspicious SQL injection attempts in query strings (but allow legitimate database operations)
    RewriteCond %{QUERY_STRING} ([0-9]+)=([0-9]+)-- [NC]
    RewriteRule ^(.*)$ - [F,L]
    
    # Block XSS attempts in query strings
    RewriteCond %{QUERY_STRING} (<|%3C).*script.*(>|%3E) [NC,OR]
    RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2})
    RewriteRule ^(.*)$ - [F,L]

    # Checks to see if the user is attempting to access a valid file,
    # such as an image or css document, if this isn't true it sends the
    # request to the front controller, index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^([\s\S]*)$ index.php/$1 [L,NC,QSA]

    # Ensure Authorization header is passed along
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]
</IfModule>

<IfModule !mod_rewrite.c>
    # If we don't have mod_rewrite installed, all 404's
    # can be sent to index.php, and everything works as normal.
    ErrorDocument 404 index.php
</IfModule>

# ==============================================================================
# SECURITY HEADERS
# ==============================================================================

<IfModule mod_headers.c>
    # Prevent MIME sniffing
    Header always set X-Content-Type-Options "nosniff"
    
    # Prevent clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # XSS Protection
    Header always set X-XSS-Protection "1; mode=block"
    
    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Remove server information
    Header always unset "X-Powered-By"
    Header always unset "Server"
</IfModule>

# Custom error documents (optional - can be enabled if you have error pages)
# ErrorDocument 403 /index.php/error/403
# ErrorDocument 404 /index.php/error/404
# ErrorDocument 500 /index.php/error/500